class Solution {
public:
    bool isPalindrome(int x) {
        string s = to_string(x);
        int len = s.size();
        for(int i = 0; i < len; i++) {
            if(s[i] == s[len - 1 - i]) {
                continue;
            }
            else {
                return false;;
            }
        }
        return true;
    }
};
