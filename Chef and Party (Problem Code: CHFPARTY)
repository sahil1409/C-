#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin >> t;
	while(t--) {
	    int n;
	    cin >> n;
	    int a[n];
	    int ans = 0;
	    for(int i = 0; i < n; i++) {
	        cin >> a[i];
	    }
	    sort(a, a + n);
	    for(int i = 0; i < n; i++) {
	        if(a[i] <= ans) ans++;
	    }
	    cout << ans << endl;
	}
	return 0;
}
