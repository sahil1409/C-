#include <iostream>
using namespace std;

int main() {
	int t;
	cin >> t;
	while(t--){
	    int n;
	    cin >> n;
	    int sum = 0;
	    for(int i = 0; i < n; i++) {
	        int x;
	        cin >> x;
	        sum += x;
	    }
	    if(sum % 2 == 0) cout << 1 << endl;
	    else cout << 2 << endl;
	}
	return 0;
}
