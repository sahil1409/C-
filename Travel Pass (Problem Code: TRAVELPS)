#include <iostream>
using namespace std;

int main() {
	int t;
	cin >> t;
	while(t--) {
	    int n, a, b;
	    cin >> n >> a >> b;
	    char s;
	    int res = 0;
	    for(int i = 0; i < n; i++) {
	        cin >> s;
	        if(s == '0') res += a;
	        else res += b;
	    }
	    cout << res << endl;
	}
	return 0;
}
